<% provide(:title, 'Editar Inscrição') %>

<h1>Edite sua Inscrição</h1>

<%= form_for (@candidato) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
	<p>
	<%= f.label :nome %>
	<%= f.text_field :nome %>
	</p>

	<p>
	<%= f.label :email %>
	<%= f.text_field :email %>
	</p>

	<p>
	<%= f.label :curso %>
	<%= f.collection_radio_buttons :curso_id, Curso.all, :id, :nome %>
	</p>

	<p>
	<%= f.label :período %>
	<%= f.select :periodo, options_for_select(1..8) %>
	</p>

	<%= f.label :matrícula %>
	<%= f.text_field :matricula %>

	<p>
	<%= f.label :cpf %>
	<%= f.text_field :cpf %>
	</p>

	<p>
	<%= f.label :data_da_dinâmica %>
	<%= f.collection_radio_buttons :data_dinamica_id, DataDinamica.all, :id, :data %>
	</p>

	<%= f.hidden_field :token, :value => params[:token] %>

	<p><%= f.submit "Editar" %></p>
<% end %>