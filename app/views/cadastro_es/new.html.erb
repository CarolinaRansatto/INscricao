<% provide(:title, 'Eventos') %>

 <div class="container">
      <div class="col-sm-4 col-sm-offset-4">
      
<h1>Inscreva-se em um Evento</h1>

<%= form_for (@cadastro_e) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
	<p>
	<%= f.label :nome %><br>
	<%= f.text_field :nome %>
	</p>

	<p>
	<%= f.label :email %><br>
	<%= f.text_field :email %>
	</p>

	<p>
	<%= f.label :curso %><br>
	<%= f.text_field :curso %>
	</p>
	
	<p>
	<%= f.label :telefone %><br>
	<%= f.text_field :telefone %>
	</p>

	<p>
	<%= f.label :evento %><br>
	<%= f.text_field :evento %>
	</p>
	
	<p>
	<%= f.label :período %><br>
	<%= f.select :periodo, options_for_select(1..8) %>
	</p>

	<%= f.label :matrícula %><br>
	<%= f.text_field :matricula %>

	<p>
	<%= f.label :cpf %><br>
	<%= f.text_field :cpf %>
	</p>

	

	<p><%= f.submit "Inscrever" %></p>
<% end %>
</div>
</div>