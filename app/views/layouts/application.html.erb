              <li><%= link_to image_tag("insta1.png", alt: "instagram"), "#"%></li>
         </ul>
        </div>
      </div>
    </nav>

  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>

<%= yield %>
    <footer class="<%= content_for :footer_class %>">
      <div class="container-fluid">
        <div class="row">
