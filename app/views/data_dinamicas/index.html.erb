<% provide(:title, 'Datas de Dinâmica') %>

<h1>Datas de Dinâmica</h1>

<table>
	<thead>
		<tr>
			<th>Data</th>
		</tr>
	</thead>
	<tbody>
		<% @datas.each do |d| %>
			<tr>
				<td>
					<%= form_for d do |f| %>
						<%= f.text_field :data %>
						<%= f.submit "Editar" %>
						<%= button_to "Remover", d, method: :delete,
                                  data: { confirm: "Confirmar" } %>
					<% end %>
				</td>
			</tr>
		<% end %>
		<tr>
			<td>
				<%= form_for @data do |f| %>
					<%= f.text_field :data %>
					<%= f.submit "Salvar" %>
				<% end %>
			</td>
		</tr>
	</tbody>
</table>